{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboardApproval",
    ":semanticCommits"
  ],
  "labels": ["Dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "lockFileMaintenance"
      ]
    },
    {
      "matchPackageNames": [
        "actions/checkout",
        "actions/setup-node",
        "actions/upload-artifact"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "dependencyDashboard": true
}
